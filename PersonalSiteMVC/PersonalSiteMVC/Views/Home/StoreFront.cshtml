@{
    ViewBag.Title = "Store Front";
    Layout = "~/Views/Shared/_LayoutLightbox.cshtml";
}

<main id="main">

    <!-- ======= Portfolio Details ======= -->
    <div id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="row">

                <div class="col-lg-8">
                    <h2 class="portfolio-title">Storefront</h2>

                    <div class="portfolio-details-slider swiper">
                        <div class="swiper-wrapper align-items-center">

                            <div class="swiper-slide">
                                <img src="~/assets/img/StoreFront/Products.jpg" alt="Products Page">
                            </div>

                            <div class="swiper-slide">
                                <img src="~/assets/img/StoreFront/About.jpg" alt="About Page">
                            </div>

                            <div class="swiper-slide">
                                <img src="~/assets/img/StoreFront/Cart.jpg" alt="Shopping Cart">
                            </div>

                        </div>
                        <div class="swiper-pagination"></div>
                    </div>

                </div>

                <div class="col-lg-4 portfolio-info">
                    <h3>Project information</h3>
                    <ul>
                        <li><strong>Category</strong>: Web design</li>
                        <li><strong>Store Name</strong>: Retro Games</li>
                        <li><strong>Project date</strong>: 20 March, 2023</li>
                        <li><strong>Project URL</strong>: <a href="#">Coming Soon!</a></li>
                        <li><strong>GitHub Link</strong>: <a href="https://github.com/jpinky82/RetroGamesStoreFront" target="_blank">www.GitHub.com</a></li>

                    </ul>

                    <p>
                        A secure application for managing product data. The application is built to simulate an online store front with a shopping cart. Administrators have the ability to manage product, category, and vendor data.
                    </p>
                </div>

            </div>

        </div>
    </div><!-- End Portfolio Details -->

</main><!-- End #main -->
